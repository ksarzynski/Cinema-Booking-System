!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Cinema Booking System
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        .navbar-header
          %a.navbar-brand{:href => "/"} Cinema Booking System
        .navbar-collapse
          %ul.navbar-nav.mr-auto
            - if user_signed_in?
              %li.nav-item
                = link_to "Screenings", screenings_path, :class => "nav-link"
              %li.nav-item
                = link_to "Customers", customers_path, :class => "nav-link"
              %li.nav-item
                = link_to "Films", films_path, :class => "nav-link"
              %ul.nav.navbar-nav.navbar-right
              %li
                = link_to 'Edit profile', edit_user_registration_path, :class => "nav-link"
              %li
                = link_to "Logout", destroy_user_session_path, method: :delete, :class => "nav-link"
            - else
              %li
                = link_to "Sign up", new_user_registration_path, :class => "nav-link"
              %li
                = link_to "Login", new_user_session_path, :class => "nav-link"
    - if notice
      %p.alert.alert-success= notice
    - if alert
      %p.alert.alert-danger= alert
    = yield
  %footer
    %p{:style => "text-align: center;"} © Kamil Sarzyński
